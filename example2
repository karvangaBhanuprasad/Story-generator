<body>
  <h1>âœ¨ Random Story Generator âœ¨</h1>
  <div class="story-box" id="story">Click the button to get a magical story! ðŸŒˆ</div>
  <button onclick="generateStory()">Generate Story</button>

  <script>
    const characters = [
      "A wizard", "A dragon", "A robot", "A pirate", "A unicorn", "An alien", "A detective"
    ];

    const settings = [
      "in Paris", "on the Moon", "inside a jungle", "at Hogwarts", "in a haunted castle", "under the sea"
    ];

    const actions = [
      "found a treasure", "stole a rainbow", "discovered a portal", "baked a giant cake", "danced with stars", "solved a mystery"
    ];

    const morals = [
      "Always believe in magic! âœ¨", 
      "Curiosity leads to adventure! ðŸ”", 
      "Kindness is the real treasure ðŸ’–", 
      "Dream big, anything is possible ðŸŒŸ"
    ];

    function getRandomItem(arr) {
      return arr[Math.floor(Math.random() * arr.length)];
    }

    function generateStory() {
      const storyBox = document.getElementById("story");
      storyBox.classList.remove("show");
      
      setTimeout(() => {
        const character = getRandomItem(characters);
        const setting = getRandomItem(settings);
        const action = getRandomItem(actions);
        const moral = getRandomItem(morals);

        const story = `${character} ${setting} ${action}. <br><br><span class="emoji">ðŸ“–</span> Moral: ${moral}`;
        storyBox.innerHTML = story;
        storyBox.classList.add("show");
      }, 300);
    }
  </script>
